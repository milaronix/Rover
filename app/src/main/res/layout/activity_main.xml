<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/switch_label"
        android:id="@+id/automatico"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_ar_izq"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="85dp"
        android:src="@drawable/formato_arriba"
        android:layout_below="@+id/automatico"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ar_der"
        android:src="@drawable/formato_arriba"
        android:layout_above="@+id/ab_izq"
        android:layout_alignLeft="@+id/ab_der"
        android:layout_alignStart="@+id/ab_der" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ab_izq"
        android:layout_below="@+id/b_ar_izq"
        android:layout_alignLeft="@+id/b_ar_izq"
        android:layout_alignStart="@+id/b_ar_izq"
        android:layout_marginTop="31dp"
        android:src="@drawable/formato_abajo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ab_der"
        android:src="@drawable/formato_abajo"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_alignTop="@+id/ab_izq"
        android:layout_toRightOf="@+id/ab_izq"
        android:layout_toEndOf="@+id/ab_izq" />


</RelativeLayout>
